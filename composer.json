{
    "name": "tkotosz/estest",
    "type": "project",
    "description": "ES Test Project",
    "license": "MIT",
    "authors": [
        {
            "name": "Tibor Kotosz",
            "email": "kotosy@gmail.com"
        }
    ],
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "ergebnis/composer-normalize": "^2.2"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Tkotosz\\EsTest\\": "src/Tkotosz/EsTest"
        }
    },
    "scripts": {
        "test": [
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-quality": [
            "phpcs -p",
            "phpstan analyse",
            "psalm",
            "phpmd ./src text ./phpmd.xml"
        ],
        "test-unit": [
            "phpspec run"
        ],
        "test-acceptance": [
            "behat"
        ],
        "fix": [
            "phpcbf -p"
        ]
    }
}
